# i3status configuration file.
# edited by Michael Song

general {
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "wireless _first_"
order += "battery 0"
order += "tztime local"

wireless _first_ {
        format_up = " W: (%quality at %essid) %ip "
        format_down = " W: down :( "
}

battery 0 {
        format = " %status %percentage %remaining "
}

tztime local {
        format = " It is %A %m-%d-%Y at %H:%M %Z "
}

disk "/" {
        format = " %avail free "
}

cpu_temperature 0 {
     format = " CPU T: %degrees Â°C "
     path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

cpu_usage {
        format = " CPU: %usage "
}
